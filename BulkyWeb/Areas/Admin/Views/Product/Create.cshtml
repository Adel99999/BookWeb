@model ProductVM

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
           <hr/>
        </div>
        <div class="mb-3">
            <label>Title</label>
            <input asp-for="Product.Title" type="text" calss="form-control"></input>
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Description</label>
            <input asp-for="Product.Description" type="text" calss="form-control"></input>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>ISBN</label>
            <input asp-for="Product.ISBN" type="text" calss="form-control"></input>
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Author</label>
            <input asp-for="Product.Author" type="text" calss="form-control"></input>
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>ListPrice</label>
            <input asp-for="Product.ListPrice" type="text" calss="form-control"></input>
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Price</label>
            <input asp-for="Product.Price" type="text" calss="form-control"></input>
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div> 
        <div class="mb-3">
            <label>Price50</label>
            <input asp-for="Product.Price50" type="text" calss="form-control"></input>
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Price100</label>
            <input asp-for="Product.Price100" type="text" calss="form-control"></input>
          
        </div>
        <div class="mb-3">
            <label>ImageURL</label>
            <input type="file" calss="form-control"></input>
            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Category</label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" type="text" calss="form-select">
                <option disabled selected>__Select Category__</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}